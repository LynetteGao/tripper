<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="The Plaza, 768 avenue"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/address"/>



        <TextView
            android:id="@+id/morning_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/add_morning_event"
            android:layout_toEndOf="@id/add_morning_event"
            android:text="Morning"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <ImageButton
            android:id="@+id/add_morning_event"
            android:background="@drawable/ic_add_circle_outline_black_24dp"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_below="@id/day"
            android:layout_marginRight="5dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/afternoon_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/morning_event"
            android:layout_toRightOf="@id/add_afternoon_event"
            android:layout_toEndOf="@id/add_afternoon_event"
            android:layout_marginTop="5dp"
            android:text="Afternoon"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

            />
        <ImageButton
            android:id="@+id/add_afternoon_event"
            android:background="@drawable/ic_add_circle_outline_black_24dp"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_below="@id/morning_event"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/evening_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/afternoon_event"
            android:text="Evening"
            android:layout_toRightOf="@id/add_evening_event"
            android:layout_toEndOf="@id/add_evening_event"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="5dp"
            />
        <ImageButton
            android:id="@+id/add_evening_event"
            android:background="@drawable/ic_add_circle_outline_black_24dp"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_below="@id/afternoon_event"
            android:layout_marginRight="5dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            />




    </RelativeLayout>
</androidx.cardview.widget.CardView>